@model CreateGameFormViewModel
@{
    ViewData["Title"] = "Add Game";
}


<h3>
    <i class="bi bi-plus-circle-dotted"></i>
    Add New Game
</h3>

<form asp-controller="Games">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name"  placeholder="Game Name">
                <span asp-validation-for="Name" class="form-text text-muted text-danger">Please add the version of the game after dash</span>
            </div>
            <div>
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select" >
                    <option disabled selected>Select</option>
                </select>
                <span asp-validation-for="CategoryId" class="form-text text-muted text-danger"></span>
            </div>
            <div>
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select multiple="" asp-for="SelectedDevices" asp-items="Model.Devices" class="form-select">
                </select>
                <span asp-validation-for="SelectedDevices" class="form-text text-muted text-danger"></span>
            </div>
            <div>
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea asp-for="Description"  class="form-control" rows="3" placeholder="Descraption"></textarea>
                <span asp-validation-for="Description" class="form-text text-muted text-danger"></span>
            </div>
            <div>
                <label asp-for="Cover" class="form-label mt-4"></label>
                <input asp-for="Cover" class="form-control" type="file">
                <span asp-validation-for="Cover" class="form-text text-muted text-danger">Support only .jpeg, .jeg, .png files</span>
            </div>
            <button type="submit" class="btn btn-primary mt-4">Create</button>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</form>